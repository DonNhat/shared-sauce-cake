<% extend("../app.ejs") %>
<section class="mt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-0">
                <div class="sec-fields-title mx-auto d-flex my-3">
                    <a class="book-button" href="/all-specializations" class="sec-fields-title d-flex flex-grow-1">
                        <span>Book Now!</span>
                    </a>
                    <% if(user){%>
                        <a class="dashboard-button" href="/login" class="sec-fields-title d-flex flex-grow-1"><span>Dashboard</span></a>
                        <%} else {%>
                            <a class="login-button" href="/login" class="sec-fields-title d-flex flex-grow-1"><span>Log in</span></a>
                        <% }%>
                    
                </div>
                <div class="homepage-logo mt-4 ml-5">
                    <!-- <img class="menu-nav" src="../images/background/menu-nav.png" alt="img logo"> -->
                    <a>
                        <!-- <img style="width: 20px; height: 20px" src="/images/icon-for-photo.jpg" alt="img logo"> -->
                        <h5 class="top-title">Photo Session Scheduling</h5>
                    </a>    
                    
                </div>
                <div class="home-nav">
                    <div class="nav-item">
                        <% if(user){%>
                            <a href="/users" target="_blank">Dashboard</a>

                            <%} else {%>
                                <a href="/login">Log in</a>
                            <% }%>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</section>
<section class="sec-header d-flex flex-column">
    <div class="img-header d-flex flex-column mt-5 ">
        <div style="margin-left: 20%;" class="mt-5"><span style="font-size: 25px">SPECIALIZED EXPLORE BOOKING PLATFORM</span></div>
        <div style="margin-left: 22%;" class="header-search mt-5">
            <i class="fa fa-search"></i>
            <label for="input-search"></label>
            <input id="input-search" placeholder="Looking for information...">
            <div id="show-info-search" class="show-info-search">

            </div>
        </div>
    </div>
    <div class="content-header d-flex  justify-content-between title-and-icon align-items-center">
        <div style="margin-left: 300px;" class="d-flex flex-column pl-5 align-items-center">
            <i class="fa fa-thumbs-up"></i>
            <span>Good reviews</span>
        </div>
        <div class="d-flex flex-column align-items-center">
            <i class="fa fa-camera"></i>
            <span>Outstanding photographers</span>
        </div>
        <div style="margin-right: 300px;" class="d-flex flex-column pr-5 align-items-center">
            <i class="fa fa-clock-o"></i>
            <span>Fast response</span>
        </div>
    </div>
</section>
<section class="sec-fields-hospital d-flex flex-column">
    <div class="sec-fields-title mx-auto d-flex my-3">
        <h2 class="">Popular packages</h2>
        <a href="/all-specializations" class="flex-grow-1 my-auto"><span>All packages</span></a>
    </div>
    <div class="section-slide">
        <div class="slider slider-nav text-decoration-none">
            <% specializations.forEach(function(x) { %>
                <!-- <a href="/detail/specialization/<%= x.id %>" class="a-specialization text-decoration-none"
                   style="outline: none"> -->
                    <div class="d-flex flex-column slide-fields specialization" data-specialization="<%= x.id %>">
                        <img src="/images/placeholder-image.png" alt="image bla bla">
                        <h3 class="text-decoration-none"><%= x.name %></h3>
                    </div>
                <!-- </a> -->
            <% }) %>
        </div>
    </div>
</section>
<section class="sec-doctors">
    <div class="sec-fields-title mx-auto d-flex my-3">
        <h2 class="">Outstanding photographers</h2>
        <!-- <a href="/all-doctors" class="flex-grow-1 my-auto"><span>All doctors</span></a> -->
    </div>
    <div class="section-slide">
        <div class="slider slider-nav text-decoration-none">
            <% doctors.forEach(function(doctor) { %>
                <!-- <a href="/detail/doctor/<%= doctor.id %>" class="text-decoration-none" style="outline: none"> -->
                    <div class="slide-doctors text-decoration-none">
                        <div class="doctor-avatar">
                            <img src="/images/placeholder-image.png"
                                 alt="image bla bla">
                            <h3 style="color: black"><%= doctor.name %></h3>
                            <h4 style="color: black"><%= doctor.getDataValue('specializationName') %></h4>
                            <span title="Counting the number of clients have been booked" style="color: #0056b3"> <%= doctor.getDataValue('countBooking') %> customers (booked)</span>
                        </div>
                    </div>
                <!-- </a> -->
            <% }) %>
        </div>
    </div>
</section>

